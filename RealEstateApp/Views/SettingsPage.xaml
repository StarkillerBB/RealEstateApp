<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateApp.Views.SettingsPage"
             Title="SettingsPage"
             xmlns:vm="clr-namespace:RealEstateApp.ViewModels"
             xmlns:models="clr-namespace:RealEstateApp.Models"
             xmlns:fa="clr-namespace:FontAwesome"
             x:DataType="vm:SettingsPageViewModel">
    <VerticalStackLayout>
        <Label 
            Text="Volume"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Slider DragCompletedCommand="{Binding SetVolumeCommand}" Value="{Binding Volume}" />
        <Label 
            Text="Volume"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Slider DragCompletedCommand="{Binding SetPitchCommand}" Value="{Binding Pitch}" />
    </VerticalStackLayout>
</ContentPage>